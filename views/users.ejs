<%- include header %>
<% posts.forEach(function (post,index){ %>
<p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
<p>
	<%- post.post %>
</p>
<p class="info">
	阅读：<%= post.pv %> | 评论：<%= post.comments.length %>
</p>
<p class="info">
	<p>作者：<a href="/u/<%= post.name %>"><%= post.name %></a></p>
	<p>日期：<%= post.time.minute %></p>
	<p>
		标签：
		<% post.tags.forEach(function (tags,index){ %>
		<% if(tag){%>
		<a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
		<% } %>
		<% }) %>
	</p>
</p>
<% }) %>
<%- include paging %>
<%- include footer %>
