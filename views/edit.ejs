<%- include header %>
<form method="post">
	<div><span>标题：</span><input type="text" name="title" value="<%= post.title %>" disabled="disabled"></div>
	<div><span>标签：</span>
		<input type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled">
		<input type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled">
		<input type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled">
	</div>
	<div>正文：</div>
	<textarea name="post" rows="20" cols="100"><%= post.post %></textarea>
	<input type="submit" value="保存修改">
</form>
<%- include footer %>