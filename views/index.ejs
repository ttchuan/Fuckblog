<%- include header %>
<% posts.forEach(function (post,index){ %>
<blokquote class="article">
	<p class="article_head"><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2><a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a></p>
	<p class="article_content"><%- post.post %></p>
	<p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
	<p class="info"><p>作者：<a href="/u/<%= post.name %>"><%= post.name %></a></p><p>日期：<%= post.time.minute %></p><p>标签：<% post.tags.forEach(function (tag,index){ %><% if(tag){%><a class="tag" href="/tags/<%= tag %>"><%= tag %></a><% } %><% }) %></p></p>
</blokquote>
<% }) %>
<%- include paging %>
<%- include footer %>
